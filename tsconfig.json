{
    "compilerOptions": {
      "target": "ES2020",                     // or ES2017+
      "module": "ESNext",                     // ESM output
      "moduleResolution": "node",
      "rootDir": "./",
      "outDir": "./",
      "strict": false,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "allowImportingTsExtensions": false, // cant set to true because it requires noEmit to be true
      "noEmit": false // has to be false to emit(build) js files,
      ,"noImplicitAny": false,
    },
    "include": ["**/*.ts", "twitter_scraper_playwright/cli.js"],
    "exclude": ["node_modules", "**/*.js"]
  }